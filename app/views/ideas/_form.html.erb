<% if @idea.errors.any? %>
  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class = "container">
  <%= form_for @idea do |f| %> 
    <div>
      <%= f.label :title %>
      </br>
      <%= f.text_area(
        :title,
        cols:50
       )%> 
    </div>
    <div>
      <%= f.label :description%>
      </br>
      <%= f.text_area(
        :description,
        cols: 50
        )%>
    </div>
    <%= f.submit :class => "btn btn-outline-primary" %>
  <% end %>
</div>